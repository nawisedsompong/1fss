<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ViewSettingsDialog confirm="handleSortDialogConfirm">
		<sortItems>
			<ViewSettingsItem text="Claim Category" key="CATEGORY_CODE" selected="true"/>
			<ViewSettingsItem text="Claim Type" key="CLAIM_CATEGORY"/>
			<ViewSettingsItem text="Claim Owner" key="CLAIM_OWNER_ID"
				enabled="{=${ViewData>/oTile}==='HistoryCoord' ||${ViewData>/oTile}==='HistoryCoordSch' }"/>
			<ViewSettingsItem text="Claim Reference No" key="CLAIM_REFERENCE"/>
			<ViewSettingsItem text="Claim Status" key="CLAIM_STATUS"/>
		</sortItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>