<core:FragmentDefinition xmlns="sap.m" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog class="sapUiSizeCompact" resizable="true" title="{i18n>TIT_CLM_DET}" horizontalScrolling="false" draggable="true"
		busy="{appView>/busy}">
		<content>
			<VBox class="sapUiSmallMargin">
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_BEN_CLM}"/>
							<Text text="{oClaimApp>/BenefitClaim}"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_CLAIM_REF}"/>
							<Text text="{oClaimApp>/ClaimRefNumber}"/>
						</VBox>
					</l:content>
				</l:Grid>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_REC_NUMB}"/>
							<Text text="{oClaimApp>/RecieptNumber}"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_REC_DATE}"/>
							<Text text="{oClaimApp>/BillDate}"/>
						</VBox>
					</l:content>
				</l:Grid>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_CLINIC_NAME}"/>
							<Text text="{oClaimApp>/ClinicName}"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
				 			<CheckBox wrapping="true" text="I have an approved Sick Leave/Hosp Leave for this claim" editable="false"/>
						</VBox>
					</l:content>
				</l:Grid>
				<VBox class="sapUiSmallMargin">
					<Title  titleStyle="H3" wrapping="true" level="H3" text="{i18n>TIT_AMNT}"/>
				</VBox>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_ENTIT}"/>
							<Text text="400"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_PENDING}"/>
							<Text text="200"/>
						</VBox>
					</l:content>
				</l:Grid>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_TAKEN}"/>
							<Text text="100"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_YR_BAL}"/>
							<Text text="300"/>
						</VBox>
					</l:content>
				</l:Grid>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_CONSULT}" wrapping="true"/>
							<Text text="120"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_OTHER_COST}" wrapping="true"/>
							<Text text="100"/>
						</VBox>
					</l:content>
				</l:Grid>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_INS_PRV}"/>
							<Text text="100"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_CASH}"/>
							<Text text="300"/>
						</VBox>
					</l:content>
				</l:Grid>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_MEDISHIELD}"/>
							<Text text="100"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_MEDSAVE}"/>
							<Text text="300"/>
						</VBox>
					</l:content>
				</l:Grid>
				<l:Grid defaultSpan="XL6 L6 M6 S12" hSpacing="1" defaultIndent="L0 M0 S0">
					<l:content>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_REC_AMNT}"/>
							<Text text="100"/>
						</VBox>
						<VBox class="sapUiMediumMarginEnd">
							<Label text="{i18n>LBL_CLAIM_AMNT}"/>
							<Text text="300"/>
						</VBox>
					</l:content>
				</l:Grid>
			</VBox>
		</content>
		<buttons>
			<Button text="{i18n>BTN_TXT_CANCEL}" press="onClose"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>