<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog class="sapUiSizeCompact" title="{/Title}" horizontalScrolling="false" draggable="true" busy="{oMode>/busy}" type="Message"
		state="Warning">
		<content>
			<l:VerticalLayout >
				<l:HorizontalLayout>
					<Label text="{/SubTitle}"/>
				</l:HorizontalLayout>
			</l:VerticalLayout>
		</content>
		<buttons>
			<Button id="btnYes" text="{/BtnYesText}" type="Emphasized"></Button>
			<Button id="btnNo" text="{/BtnNoText}"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>