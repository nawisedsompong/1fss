<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml">
	<ResponsivePopover class="sapUiPopupWithPadding" title="{oPopup>/Title}" placement="Auto" showCloseButton="false">
		<content>
			<core:HTML preferDOM="true" content="{oPopup>/BodyText}"/>
		</content>
		<endButton>
			<Button press="onCancelPopover" text="{oPopup>/BtnOkText}" type="Default" class="sapUiSmallMarginTopBottom"></Button>
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>