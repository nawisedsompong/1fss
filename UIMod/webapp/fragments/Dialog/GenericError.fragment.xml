<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog showHeader="false" verticalScrolling="false" horizontalScrolling="false" resizable="false">
		<!--Added css -->
		<html:style>
			.ErroriconSize { font-size: 5rem; } .dialogTitle { width: 100%; white-space: pre-wrap !important; margin-left: 0 !important; margin-right: 0
			!important; padding-left: 5%; padding-right: 5%; } .hrpDialog { min-width: 35%; } .dialogConfirmTitleFont { font-size: 1.125rem !important;
			margin-top: 0.5rem !important; line-height: 1.4; } .dialogPadding { margin: 0.625rem; } .dialogConfirmationTitle { width: 100%;
			justify-content: left; white-space: pre-wrap !important; text-align: left; overflow: visible; } .dialogConfirmationText { width: 100%; }
			.dialogConfirmationText2 { padding-top: 3%; width: 100%; padding-left: 5%; } .dialogConfirmationText3 { padding-top: 2%; width: 100%;
			padding-left: 5%; } .dialogSingleBtn { min-width: 8.4375rem; min-height: 2rem; } .successTitle { width: 100%; white-space: pre-wrap
			!important; overflow: visible; } .dialogStretchText { width: 100%; justify-content: center; } .dialogHead>div { width: 100% !important; }
			.dialogPadding5 { padding-right: 5%; padding-left: 5%; } .dialogFlexCol { flex-direction: column; } .dialogBtnMinWidth { min-width:
			8.4375rem; min-height: 2rem; } .textBold { font-weight: bold; } .iconSize1 { font-size: 1.5rem; } .iconSize2 { font-size: 5rem !important; }
			.iconSize3 { font-size: 6rem; } .btnCustomHRP { min-width: 10.9375rem; } .successIcon { color: #277c79 !important; } .subTitleLabel { color:
			#5c5c66 !important; font-size: 1rem !important; line-height: 1.3125rem !important; font-family: Lato !important; font-weight: normal;
			font-style: normal; font-stretch: normal; line-height: 1.31; letter-spacing: normal; width: 100%; justify-content: left; white-space:
			pre-wrap !important; margin-left: 0 !important; margin-right: 0 !important; text-align: left; overflow: visible; } .horiLayout
			.sapUiHLayoutChildWrapper { display: grid !important; } .horiLayout1.sapUiHLayoutChildWrapper { display: grid !important; }
			.verticalLayoutWidth { width: 100%; } .tableRowBackground { background: transparent !Important; } .ZPernrTitle.sapMLabel { color: #97999c;
			font-size: .875rem; font-family: 'Lato', sans-serif; font-weight: normal; text-overflow: ellipsis; overflow: hidden; display:
			table-header-group !important; white-space: nowrap; cursor: text; }
		</html:style>
		<l:VerticalLayout class="sapUiContentPadding verticalLayoutWidth">
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<core:Icon src="sap-icon://message-error" class="iconSize2 sapUiTinyMarginTopBottom" color="red"/>
				</items>
			</FlexBox>
	 		<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Title wrapping="true" text="{/Title}" titleStyle="H2" level="H2" class="successTitle" textAlign="Center"/>
				</items>
			</FlexBox>
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Label wrapping="true" text="{/SubTitle}" class="subTitleLabel sapUiNoContentPadding" textAlign="Center"/>
				</items>
			</FlexBox>
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Button id="btnOk" text="{/BtnOkText}" press="onCancel" width="100%" type="Emphasized" class="dialogSingleBtn sapUiSmallMarginTopBottom"></Button>
				</items>
			</FlexBox>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>